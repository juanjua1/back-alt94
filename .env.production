# Archivo .env para producción con MongoDB Atlas

NODE_ENV=production
PORT=3000

# MongoDB Atlas (reemplazar con tu connection string)
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/property_db?retryWrites=true&w=majority

# JWT (cambiar por un secreto más seguro)
JWT_SECRET=tu-super-secreto-jwt-para-produccion-muy-largo-y-seguro
JWT_EXPIRES_IN=1d

# CORS (agregar tu dominio de Vercel del frontend)
CORS_ORIGIN=https://tu-frontend.vercel.app,http://localhost:3001
